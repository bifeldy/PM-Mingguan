<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/detail_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp"
            app:srcCompat="@drawable/ic_notifications" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bgapp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/clover"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_translucent_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/seasonal_information"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"
                    android:background="#11000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_anime_image"
                        android:padding="8dp"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/maido3"
                        android:scaleType="centerCrop"
                        android:layout_weight="3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/detail_anime_title"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Anime Title"
                            android:textSize="20sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="@color/white" />

                        <View
                            android:background="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/detail_anime_score"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="9"
                                    android:text="8.72"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:gravity="bottom|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_scored_by"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="6"
                                    android:text="123,456 Scores"
                                    android:textSize="12sp"
                                    android:gravity="top|left"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <View
                                android:background="@android:color/darker_gray"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:paddingTop="8dp">

                                <TextView
                                    android:id="@+id/detail_anime_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="TV"
                                    android:textStyle="italic"
                                    android:textSize="16sp"
                                    android:gravity="bottom|right"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="Finished Airing"
                                    android:textSize="12sp"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_episodes"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="24 Episodes"
                                    android:textSize="12sp"
                                    android:gravity="top|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/detail_anime_aired_from"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:text="09/01/2019"
                                android:paddingRight="2dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical|left"
                                android:textColor="@color/white" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:src="@drawable/bar"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/detail_anime_aired_to"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:text="09/01/2019"
                                android:paddingLeft="2dp"
                                android:textSize="14sp"
                                android:gravity="center_vertical|right"
                                android:textColor="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp">

                            <TextView
                                android:id="@+id/detail_anime_premiered_broadcast"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Winter 2019, Wednesdays at 22:00 (JST)"
                                android:textSize="10sp"
                                android:gravity="center_horizontal|top"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="4dp"
                                android:text="Information"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Romanji"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_title_romanji"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="romanji"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Japanese"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_title_japanese"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="japanese"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Source"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_source"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="source"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Duration"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_duration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="duration"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Rating"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_rating"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="rating"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Rank"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_rank"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="rank"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Popularity"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_popularity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="popularity"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Members"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_members"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="members"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="4dp"
                                    android:text="Favorites"
                                    android:textSize="14sp"
                                    android:gravity="center_vertical|left"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/detail_anime_favorites"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:paddingLeft="4dp"
                                    android:text="favorites"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical|right"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                            <View
                                android:background="@android:color/darker_gray"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="4dp"
                                android:text="Sisnopsis"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold|italic"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/detail_anime_synopsis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="4dp"
                                android:text="Isi Sinopsis"
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>