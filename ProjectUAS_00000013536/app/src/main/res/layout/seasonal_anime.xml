<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/card_view_product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/seasonal_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/maido2"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/seasonal_title"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:paddingLeft="@dimen/nav_header_vertical_spacing"
                    android:paddingRight="@dimen/nav_header_vertical_spacing"
                    android:text="Judul Anime"
                    android:drawableLeft="@drawable/ic_subject"
                    android:drawablePadding="4dp"
                    android:textColor="@color/gray"
                    android:gravity="bottom"
                    android:background="#AD000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="#AD000000">

                    <TextView
                        android:id="@+id/seasonal_score"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingLeft="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:text="Score"
                        android:drawableLeft="@drawable/ic_star"
                        android:drawablePadding="4dp"
                        android:textColor="@color/gray"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/seasonal_members"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:paddingLeft="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:text="Members"
                        android:drawableLeft="@drawable/ic_members"
                        android:drawablePadding="4dp"
                        android:textColor="@color/gray"
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>